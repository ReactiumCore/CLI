const { chalk } = arcli;

module.exports = spinner => {
    const emit = text => {
        if (!spinner) return;
        spinner.text = text;
    };

    return {
        // options: { action, params, props }
        create: ({action, params, props}) => {
            emit(`Creating ${chalk.cyan('something')}...`);
            console.log({action, params, props});
        },
    };
};
